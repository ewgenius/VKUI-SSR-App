  "license": "MIT",
  "scripts": {
    "dev:server:build": "NODE_ENV=development TS_NODE_PROJECT=\"tsconfig.webpack.json\" webpack -c webpack.server.ts --mode=development -w",
    "dev:server:start": "nodemon ./dist/server/index.js",
    "dev": "npm-run-all --parallel dev:server:build dev:client:build dev:server:start",
    "build:server": "TS_NODE_PROJECT=\"tsconfig.webpack.json\" webpack -c webpack.server.ts --mode=production",
    "start:server": "node ./dist/server/index.js",
    "build:client": "TS_NODE_PROJECT=\"tsconfig.webpack.json\" webpack -c webpack.client.ts --mode=production",
    "dev:client:build": "NODE_ENV=development TS_NODE_PROJECT=\"tsconfig.webpack.json\" webpack -c webpack.client.ts --mode=development -w"
  },
  "dependencies": {
    "@vkontakte/icons": "^1.69.0",
    "@vkontakte/vk-bridge": "^2.3.0",
    "@vkontakte/vkjs": "^0.20.0",
    "@vkontakte/vkui": "https://github.com/VKCOM/VKUI.git#fix/ssr-support",
    "express": "^4.17.1",
    "react": "^17.0.1",
    "react-dom": "^17.0.1"
  },
  "devDependencies": {
    "@babel/runtime": "^7.12.5",
    "@purtuga/esm-webpack-plugin": "^1.5.0",
    "@types/express": "^4.17.9",
    "@types/html-webpack-plugin": "^3.2.4",
    "@types/mini-css-extract-plugin": "^1.2.2",
    "@types/node": "^14.14.16",
    "@types/react": "^17.0.0",
    "@types/react-dom": "^17.0.0",
    "@types/webpack": "^4.41.25",
    "@types/webpack-node-externals": "^2.5.0",
    "css-loader": "^5.0.1",
    "html-webpack-plugin": "^4.5.0",
    "mini-css-extract-plugin": "^1.3.3",
    "nodemon": "^2.0.6",
    "npm-run-all": "^4.1.5",
    "prop-types": "^15.7.2",
    "style-loader": "^2.0.0",
    "ts-loader": "^8.0.12",
    "ts-node": "^9.1.1",
    "typescript": "^4.1.3",
    "webpack": "^5.11.1",
    "webpack-cli": "^4.3.0",
    "webpack-node-externals": "^2.5.2"
  }
}
